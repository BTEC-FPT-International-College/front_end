<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<!-- Any url that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>
	</excludes>

	<!-- Apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/login*</pattern>
	</decorator>
	<decorator name="profile" page="profile.jsp">
		<pattern>/profile*</pattern>
	</decorator>
	
	<decorator name="transaction" page="transaction-history.jsp">
		<pattern>/transaction*</pattern>
	</decorator>
	
	<decorator name="post-detail" page="post-detail.jsp">
		<pattern>/post*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>

</decorators> 