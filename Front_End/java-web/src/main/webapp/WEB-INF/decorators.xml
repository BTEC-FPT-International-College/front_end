<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/view">
	<!-- Any url that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/api*</pattern>
	</excludes>

	<!-- Apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>

	<decorator name="web" page="./web/home.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="login" page="./web/login.jsp">
		<pattern>/login</pattern>
	</decorator>
</decorators> 